{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
} 