{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "checkJs": true,
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "src/**/*"
  ]
} 